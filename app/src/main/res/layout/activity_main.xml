<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_all"
        android:text="@string/app_title"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_all"
        app:srcCompat="@drawable/lotto" />

    <TextView
        android:id="@+id/luckyNumbersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_all"
        android:background="#c6178c"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="40sp" />

    <Button
        android:id="@+id/luckyNumbersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/luckyNumbersTextView"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_all"
        android:text="@string/lucky_numbers_button_text" />
</RelativeLayout>
